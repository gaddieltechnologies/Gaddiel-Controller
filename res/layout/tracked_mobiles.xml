<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/bbuton_info_rounded"
    android:padding="6dp" >

    <TextView
        android:id="@+id/remoteusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
         android:textColor="#000000"
        android:text="@string/track_remoteuser" />

      <TextView
          android:id="@+id/hstatus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/remoteusername"
          android:layout_alignBottom="@+id/remoteusername"
          android:layout_alignParentRight="true"
           android:textColor="#000000"
          android:focusable="false"
          android:focusableInTouchMode="false"
          android:text="TextView" />

</RelativeLayout>