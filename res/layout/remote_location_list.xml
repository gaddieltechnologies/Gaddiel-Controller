<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical"
     android:background="@drawable/bbuton_info_rounded"
    android:padding="5dp" >

    <TextView
        android:id="@+id/rll_lable_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="AT: "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/rll_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/rll_lable_location"
        android:layout_alignBottom="@+id/rll_lable_location"
        android:layout_toRightOf="@+id/rll_lable_location"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rll_time"
        android:layout_toRightOf="@+id/rll_time"
        android:text="- " />

    <TextView
        android:id="@+id/rll_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="TextView"
        android:textColor="#000000" />

</RelativeLayout>
