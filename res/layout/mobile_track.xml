<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33B5E5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bbuton_primary_rounded"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"  
                android:layout_margin="3dp"             
                android:text="@string/mob_note" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"  >

            <EditText
                android:id="@+id/rname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:hint="@string/mob_name"
                android:background="@drawable/edittext"
                android:ems="10"
                android:inputType="textPersonName"
                 >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_margin="3dp" >

            <EditText
                android:id="@+id/rphoneno"
                android:layout_width="wrap_content"
                 android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:hint="@string/mob_phoneno"
                android:background="@drawable/edittext"
                android:ems="10"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"  >

            <EditText
                android:id="@+id/rdesign"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:hint="@string/mob_designation"
                android:background="@drawable/edittext"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"  >

            <EditText
                android:id="@+id/rlocal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:hint="@string/mob_location"
                android:background="@drawable/edittext"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/addremoteuser"
                style="@style/ButtonText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bbuton_primary_rounded"
                android:minHeight="40dp"
                android:soundEffectsEnabled="true"
                android:text="@string/mob_addremotebtn" />

        </LinearLayout>

        <TextView
            android:id="@+id/cpn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cpn"
            android:visibility="gone" />

    </LinearLayout>
    

</ScrollView>
